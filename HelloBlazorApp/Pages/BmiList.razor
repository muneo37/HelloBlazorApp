@page "/bmilist"

<h3>リスト表示</h3>

<table class="table">
    <thead class="thead-light">
        <tr>
            <td>名前</td>
            <td>身長</td>
            <td>体重</td>
            <td>BMI</td>
        </tr>
    </thead>
    @foreach (var it in Items)
    {
        <HelloBlazorApp.Components.BmiChild Item="@it" />
    }

</table>
@code {
    private List<BmiItem> Items { get; set; }

    protected override void OnInitialized()
    {
        this.Items = new List<BmiItem>();
        this.Items.Add(new BmiItem()
            {
                Name = "コーンヘッド",
                Height = 1100,
                Weight = 50
            });
        this.Items.Add(new BmiItem()
            {
                Name = "isiyamasan",
                Height = 120,
                Weight = 50,
            });
        this.Items.Add(new BmiItem()
            {
                Name = "gouda",
                Height = 10,
                Weight = 200
            });
        this.Items.Add(new BmiItem()
            {
                Name = "mojamoja",
                Height = 200,
                Weight = 100,
            });

        base.OnInitialized();
    }
}
