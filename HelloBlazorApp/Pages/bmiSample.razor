@page "/simple"

<h3>bmiSample</h3>

<table class="table">
    <tr>
        <td>名前</td>
        <td>@bmi.Name</td>
    </tr>
    <tr>
        <td>身長</td>
        <td>@bmi.Height</td>
    </tr>
    <tr>
        <td>体重</td>
        <td>@bmi.Weight</td>
    </tr>
</table>
<div style="font-size: @fontSize">計算結果は @bmi.Bmi.ToString("00.0") です。</div>
@code {
    private BmiItem bmi = new BmiItem()
        {
            Name = "サトウユウスケ",
            Height = 170.0,
            Weight = 62,

        };


    private string fontSize = "32px";
}
